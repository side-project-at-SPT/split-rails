<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-5">
    <%= link_to 'Home', root_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white font-medium" %>
  </div>

  <% content_for :title, "Visitors" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Visitors</h1>
    <%= link_to "New visitor", new_visitor_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="visitors" class="min-w-full">
    <% @visitors.each do |visitor| %>
      <%= render visitor %>
      <p>
        <%= link_to "Show this visitor", visitor, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
